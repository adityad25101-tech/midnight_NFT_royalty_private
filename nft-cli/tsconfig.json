{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test/**",
    "src/cli.ts",
    "src/tui_standalone.ts",
    "src/tui_preview.ts",
    "src/setup/**"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "ESNext"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
